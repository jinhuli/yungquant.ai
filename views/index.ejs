<%# views/index.ejs %>
 
<% extend('template') %>
    <link rel="stylesheet" href="/stylesheets/stockStyles.css">
    <style>
    .chart{
        height: 80vh;
    }
    </style>
    <div class="jumbotron">
        <div class="container text-center">
            <h1> YungQuant.io </h1>
            <p> Your personal quantitative developer and analyst </p>
        </div>
        <div id="StockTickerContainer" style="height: 32px; line-height: 32px; overflow: hidden;">
            <div id='dvStockTicker' class='stockTicker'>
            </div>
        </div>
    </div>

    <div class="containter text-center" style="margin:25px;">
        <h3 display:inline-block; padding:1em; margin: 15px;> <em><q>Finally, a website that gives regular people the tools to grow their investments like the big banks</q> </em>            - Some guy, probably </h3>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="/js/stockSetup.js"></script>
    <script src="/js/stockFetch.js"></script>

    <!-- TradingView Widget BEGIN -->
    <div class="chart">
        <script type="text/javascript" src="https://s3.tradingview.com/tv.js"></script>
        <script type="text/javascript">
        new TradingView.widget({
            "autosize": "true",
            "symbol": "INDEX:FTSE",
            "interval": "D",
            "timezone": "Etc/UTC",
            "theme": "White",
            "style": "3",
            "locale": "en",
            "toolbar_bg": "#f1f3f6",
            "enable_publishing": false,
            "allow_symbol_change": true,
            "hideideas": true
        });
        </script>

    </div>
